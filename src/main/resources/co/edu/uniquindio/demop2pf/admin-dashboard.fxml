<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="800" prefWidth="1200" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.viewController.AdminDashboardViewController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Bienvenido Admin" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleActualizar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;" text="Actualizar Datos" />
        <Button onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;" text="Cerrar Sesion" />
    </HBox>
    
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
        </columnConstraints>
        
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="0">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Total Usuarios" />
            <Label fx:id="totalUsuariosLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="0" />
        </VBox>
        
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="1">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Total Envios" />
            <Label fx:id="totalEnviosLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e67e22;" text="0" />
        </VBox>
        
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="2">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Envios Activos" />
            <Label fx:id="enviosActivosLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="0" />
        </VBox>
        
       <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="3">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Ingreso Total" />
            <Label fx:id="ingresoTotalLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2ecc71;" text="0" />
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    
    <TabPane style="-fx-background-color: white; -fx-background-radius: 10;" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        
        <Tab text="Gestion de Usuarios">
            <VBox spacing="15" style="-fx-padding: 20;">
                
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 14px;" text="Filtrar:" />
                    <TextField fx:id="filtroUsuarioField" prefWidth="300" promptText="Buscar por nombre o email..." />
                    <Button onAction="#handleFiltrarUsuarios" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Filtrar" />
                    <Button onAction="#handleMostrarTodosUsuarios" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Mostrar Todos" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleEliminarUsuario" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Eliminar Usuario" />
                    <Button onAction="#handleVerDetallesUsuario" style="-fx-background-color: #16a085; -fx-text-fill: white;" text="Ver Detalles" />
                    <Button onAction="#handleVerEnviosUsuario" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Ver Envios" />
                </HBox>
                
                <TableView fx:id="usuariosTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUsuarioId" prefWidth="150" text="ID Usuario" />
                        <TableColumn fx:id="colUsuarioNombre" prefWidth="250" text="Nombre Completo" />
                        <TableColumn fx:id="colUsuarioEmail" prefWidth="250" text="Email" />
                        <TableColumn fx:id="colUsuarioTelefono" prefWidth="150" text="Telefono" />
                        <TableColumn fx:id="colUsuarioEnvios" prefWidth="100" text="Num Envios" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>
        
        <Tab text="Gestion de Envios">
            <VBox spacing="15" style="-fx-padding: 20;">
                
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 14px;" text="Filtrar por Estado:" />
                    <ComboBox fx:id="filtroEstadoEnvioCombo" prefWidth="200" />
                    <Button onAction="#handleFiltrarEnvios" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Filtrar" />
                    <Button onAction="#handleMostrarTodosEnvios" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Mostrar Todos" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleEliminarEnvio" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Eliminar Envio" />
                    <Button onAction="#handleVerDetallesEnvio" style="-fx-background-color: #16a085; -fx-text-fill: white;" text="Ver Detalles" />
                    <Button onAction="#handleCambiarEstadoEnvio" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Cambiar Estado" />
                </HBox>
                
                <TableView fx:id="enviosTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colEnvioId" prefWidth="150" text="ID Envio" />
                        <TableColumn fx:id="colEnvioUsuario" prefWidth="180" text="Usuario" />
                        <TableColumn fx:id="colEnvioOrigen" prefWidth="150" text="Origen" />
                        <TableColumn fx:id="colEnvioDestino" prefWidth="150" text="Destino" />
                        <TableColumn fx:id="colEnvioEstado" prefWidth="120" text="Estado" />
                        <TableColumn fx:id="colEnvioCosto" prefWidth="100" text="Costo" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>
        
        <Tab text="Reportes y Notificaciones">
            <ScrollPane fitToWidth="true">
                <VBox spacing="20" style="-fx-padding: 20;">
                    
                    <GridPane hgap="20" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50" />
                            <ColumnConstraints percentWidth="50" />
                        </columnConstraints>
                        
                        <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Reportes de Envios" />
                            <Button maxWidth="Infinity" onAction="#handleGenerarReporteCSV" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 15;" text="Generar Reporte CSV" />
                            <Button maxWidth="Infinity" onAction="#handleGenerarReportePDF" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-padding: 15;" text="Generar Reporte PDF" />
                        </VBox>
                        
                        <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Reportes de Usuarios" />
                            <Button maxWidth="Infinity" onAction="#handleGenerarReporteUsuariosCSV" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 15;" text="Generar Reporte CSV" />
                            <Button maxWidth="Infinity" onAction="#handleGenerarReporteUsuariosPDF" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-padding: 15;" text="Generar Reporte PDF" />
                        </VBox>
                        
                        <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Estadisticas Avanzadas" />
                            <Button maxWidth="Infinity" onAction="#handleEstadisticasDetalladas" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-padding: 15;" text="Ver Estadisticas Detalladas" />
                            <Button maxWidth="Infinity" onAction="#handleExportarDatos" style="-fx-background-color: #d35400; -fx-text-fill: white; -fx-padding: 15;" text="Exportar Todos los Datos" />
                        </VBox>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                </VBox>
            </ScrollPane>
        </Tab>
    </TabPane>
</VBox>
